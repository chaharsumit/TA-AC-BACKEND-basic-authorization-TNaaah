<% include partials/header %>

<section class="dashboard container">
  <article class="dashboard-content flex">
    <h1>Products</h1>
      <div class="products-parent flex">
      <% products.forEach(product => { %>
        <div class="flex products-container">
          <div class="products-data">
            <h3><%= product.name %></h3>
            <p><%= product.price %></p>
            <a href="/products/<%= product.id %>/edit">Edit Product</a>
            <br>
            <a href="/products/<%= product.id %>/delete">Delete Product</a>
          </div>
          <div class="dash-image-container">
            <img src="<%= product.image %>" alt="image" class="dash-image">
          </div>
        </div>
      <% }) %> 
    </div>
  </article>

  <article class="dashboard-content flex">
    <h1>Users</h1>
    <% users.forEach(user => { %>
      <div class="flex products-container">
        <p><%= user.userName %></p>
        <a href="/users/<%= user.id %>/block">Block User</a>
        <a href="/users/<%= user.id %>/unblock">Unblock User</a>
      </div>
    <% }) %>
  </article>
</section>